{
  "compilerOptions": {
    "outDir": "cjs",
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": false,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": false
  },
  "exclude": ["node_modules", "build", "dist", "cjs", "scripts", "webpack"]
}
